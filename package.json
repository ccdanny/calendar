{
  "name": "calendar-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "dev": "nodemon index.js",
    "client:dev": "vite --config client/vite.config.js",
    "client:build": "vite build --config client/vite.config.js && cp client/index.html client/dist/index.html",
    "build": "npm run client:build",
    "build:prod": "npm run client:build && NODE_ENV=production node index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run client:dev\""
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "json2csv": "^6.0.0-alpha.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "antd": "^5.12.0",
    "axios": "^1.6.0",
    "chinese-days": "^1.0.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "prisma": "^5.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.1",
    "vite-plugin-compression": "^0.5.1"
  }
}
